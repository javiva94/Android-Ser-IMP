<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    class="com.google.android.gms.maps.SupportMapFragment"
    tools:context="com.example.iaeste.general.MapsActivityKrich">


    <EditText
        android:paddingTop="12dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Tv_program"
        android:hint="Where do you want to select"/>
    <Button
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="geolocate"
        android:id="@+id/btn_search" />

    <fragment
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_below="@id/Tv_program"
        android:name="com.google.android.gms.maps.MapFragment"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mMapView"
        android:layout_below="@id/mMapView"
        android:onClick="OnClickSave"
        android:text="Save" />

    <Button
        android:text="Clear"
        android:id="@+id/Clear"
        android:layout_below="@id/mMapView"
        android:layout_alignLeft="@id/mMapView"
        android:layout_width="120dp"
        android:onClick="Clear"
        android:layout_height="wrap_content" />
    <Button
        android:text="Forest-Type"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:onClick="Type"
        android:layout_below="@id/mMapView"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
